<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/row_section" >

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_calendar" >

        <TextView
            android:id="@+id/txt_race_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:tag="number"
            android:text="17"
            android:textColor="@color/base_red"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txt_race_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:tag="title"
            android:text="name"
            android:textColorHint="@color/black_overlay"
            android:textSize="16sp" />

        <LinearLayout
           android:layout_marginLeft="15dp"           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_race_name"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"   
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hour" />

                <TextView
                    android:layout_marginLeft="3dp"                   
                    android:id="@+id/txt_race_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="general"
                    android:text="time"
                    android:textColor="@color/letters_gray"
                    android:textSize="12sp" />
                
                <ImageView
                    android:id="@+id/img_Country"
                    android:layout_marginLeft="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/country_row" />

                <TextView
                    android:id="@+id/txt_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:tag="general"
                    android:text="country"
                    android:textColor="@color/letters_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"   
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/distance" />

                <TextView
                    android:id="@+id/txt_race_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="general"
                    android:layout_marginLeft="3dp"
                    android:text="distance"
                    android:textColor="@color/letters_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>